# --- 1. Ø§ÛŒØ¬Ø§Ø¯ ØªØµØ§ÙˆÛŒØ± Ù…ØµÙ†ÙˆØ¹ÛŒ (Ø¨Ø¯ÙˆÙ† Ù†ÛŒØ§Ø² Ø¨Ù‡ Ø§ÛŒÙ†ØªØ±Ù†Øª) ---
def create_synthetic_images(num=10, size=28):
    images = []
    for i in range(num):
        # ØªØµÙˆÛŒØ± Ù¾Ø§ÛŒÙ‡ Ø®Ø§Ù„ÛŒ
        img = np.zeros((size, size), dtype=np.uint8)
        center = size // 2
        
        # Ú©Ø´ÛŒØ¯Ù† ÛŒÚ© Ø¯Ø§ÛŒØ±Ù‡ Ø³Ø§Ø¯Ù‡ Ú©Ù‡ Ø¨Ø§ i Ø¬Ø§Ø¨Ø¬Ø§ Ù…ÛŒâ€ŒØ´ÙˆØ¯ (Ø´Ø¨ÛŒÙ‡ Ø§Ø±Ù‚Ø§Ù… Ù…Ø®ØªÙ„Ù)
        y, x = np.ogrid[:size, :size]
        mask = (x - center)**2 + (y - center - i*2)**2 < 60  # Ø´Ø¹Ø§Ø¹ Ø¨Ø²Ø±Ú¯â€ŒØªØ± Ø¨Ø±Ø§ÛŒ Ø¯ÛŒØ¯ Ø¨Ù‡ØªØ±
        img[mask] = 220  # Ø±ÙˆØ´Ù†
        
        # Ø§Ø¶Ø§ÙÙ‡ Ú©Ø±Ø¯Ù† Ù†ÙˆÛŒØ² Ù…Ù„Ø§ÛŒÙ…
        noise = np.random.randint(0, 60, size=(size, size), dtype=np.uint8)
        img = img + noise
        
        # Ù…Ø­Ø¯ÙˆØ¯ Ú©Ø±Ø¯Ù† Ø¨Ù‡ 0-255
        img = np.clip(img, 0, 255)
        
        images.append(img)
    
    return np.array(images)

images = create_synthetic_images(10)
h, w = 28, 28

# --- 2. ØªØ¨Ø¯ÛŒÙ„ Ø¨Ù‡ Ø¨ÛŒØªâ€ŒÙ‡Ø§ ---
def image_to_bits(image):
    return np.array([int(b) for pixel in image.flatten() for b in format(pixel, '08b')])

def bits_to_image(bits, shape=(28, 28)):
    pixels = []
    for i in range(0, len(bits), 8):
        byte = bits[i:i+8]
        if len(byte) < 8:
            break
        pixels.append(int("".join(map(str, byte)), 2))
    arr = np.array(pixels[:shape[0]*shape[1]], dtype=np.uint8)
    return arr.reshape(shape)

# --- 3. Ú©Ø¯ Ú©Ø§Ù†ÙˆÙ„ÙˆØ´Ù†Ø§Ù„ Ù¾ÛŒØ´Ø±ÙØªÙ‡ (rate 1/2, K=7) ---
G1 = np.array([1, 1, 1, 1, 0, 0, 1])  # 171 octal
G2 = np.array([1, 0, 1, 1, 0, 1, 1])  # 133 octal
K = 7
num_states = 2**(K-1)  # 64 Ø­Ø§Ù„Øª

def conv_encode(bits):
    tail = np.zeros(K-1, dtype=int)
    padded = np.concatenate([bits, tail])
    state = np.zeros(K-1, dtype=int)
    encoded = []
    for bit in padded:
        out1 = np.sum(np.concatenate([state, [bit]]) * G1) % 2
        out2 = np.sum(np.concatenate([state, [bit]]) * G2) % 2
        encoded.extend([out1, out2])
        state = np.concatenate([state[1:], [bit]])
    return np.array(encoded, dtype=int)

# --- 4. Viterbi soft-decision Ø¨Ù‡ÛŒÙ†Ù‡ ---
def viterbi_decode_soft(received):
    inf = float('inf')
    soft = 1.0 - 2.0 * received.astype(float)
    
    path_metrics = np.full(num_states, inf)
    path_metrics[0] = 0.0
    predecessors = np.full((len(received)//2, num_states), -1, dtype=int)
    input_bits = np.full((len(received)//2, num_states), -1, dtype=int)
    
    for t in range(0, len(received), 2):
        curr_soft = soft[t:t+2]
        new_metrics = np.full(num_states, inf)
        
        for state in range(num_states):
            if path_metrics[state] == inf: continue
            for input_bit in [0, 1]:
                next_state = ((state << 1) | input_bit) & (num_states - 1)
                shift_reg = [(state >> i) & 1 for i in range(K-2, -1, -1)] + [input_bit]
                expected = np.array([np.sum(np.array(shift_reg) * G1) % 2, np.sum(np.array(shift_reg) * G2) % 2])
                expected_soft = 1.0 - 2.0 * expected
                branch_metric = np.sum((expected_soft - curr_soft)**2)
                
                candidate = path_metrics[state] + branch_metric
                if candidate < new_metrics[next_state]:
                    new_metrics[next_state] = candidate
                    predecessors[t//2, next_state] = state
                    input_bits[t//2, next_state] = input_bit
        
        path_metrics = new_metrics
    
    current_state = np.argmin(path_metrics)
    decoded = []
    for t in range(len(received)//2 - 1, -1, -1):
        bit = input_bits[t, current_state]
        if bit == -1: break
        decoded.append(bit)
        current_state = predecessors[t, current_state]
    
    return np.array(decoded[::-1], dtype=int)

# --- 5. Ù†ÙˆÛŒØ² ---
def add_noise(encoded, error_prob=0.05):
    noisy = encoded.copy()
    flip = np.random.random(len(noisy)) < error_prob
    noisy[flip] = 1 - noisy[flip]
    return noisy

# --- 6. Ù¾Ø±Ø¯Ø§Ø²Ø´ ---
recovered_images = []
total_bits = 0
errors_before = 0
errors_after = 0

for img in tqdm(images, desc="Ù¾Ø±Ø¯Ø§Ø²Ø´ ØªØµØ§ÙˆÛŒØ± Ù…ØµÙ†ÙˆØ¹ÛŒ ğŸ”¥"):
    original_bits = image_to_bits(img)
    total_bits += len(original_bits)
    
    encoded = conv_encode(original_bits)
    noisy = add_noise(encoded, error_prob=0.05)
    
    errors_before += np.sum(encoded != noisy)
    
    decoded = viterbi_decode_soft(noisy)
    
    min_len = min(len(original_bits), len(decoded))
    errors_after += np.sum(original_bits[:min_len] != decoded[:min_len])
    
    recovered_images.append(bits_to_image(decoded, (h, w)))


# -------------------------- Error Detection Simulation (Ø¨Ù‡Ø¨ÙˆØ¯ÛŒØ§ÙØªÙ‡) --------------------------
def simulate_error_detection(datasets_dict, trials=500):
    models = {
        "single_bit": lambda b: flip_bits(b, 1),
        "double_bit": lambda b: flip_bits(b, 2),
        "burst_8": lambda b: burst_error(b, 8),
        "burst_16": lambda b: burst_error(b, 16),
    }
    
    results = []
    sample_ds = next(iter(datasets_dict.values()))[0]
    sample_bytes = sample_to_bytes(sample_ds[0])
    
    for crc_name, config in CRC_PRESETS.items():
        for model_name, error_func in models.items():
            detected = 0
            for _ in range(trials):
                corrupted = error_func(bytearray(sample_bytes))
                if config.func(bytes(corrupted)) != config.func(sample_bytes):
                    detected += 1
            results.append({
                "crc": crc_name,
                "model": model_name,
                "detection_rate": detected / trials
            })
    
    return pd.DataFrame(results)

def flip_bits(data: bytearray, n: int):
    for _ in range(n):
        pos = random.randrange(len(data) * 8)
        data[pos // 8] ^= (1 << (pos % 8))
    return data

def burst_error(data: bytearray, length: int):
    if len(data) == 0: return data
    start = random.randrange(max(1, len(data)*8 - length + 1))
    for i in range(length):
        pos = start + i
        if pos < len(data)*8:
            data[pos // 8] ^= (1 << (pos % 8))
    return data


# -------------------------- CRC Configurations --------------------------
@dataclass
class CRCConfig:
    name: str
    width: int
    poly: int
    init: int
    xorout: int
    refin: bool
    refout: bool
    func: Callable[[bytes], int] = None  # ØªØ§Ø¨Ø¹ Ø¢Ù…Ø§Ø¯Ù‡ (Ø¨Ø±Ø§ÛŒ Ø³Ø±Ø¹Øª)

# CRCÙ‡Ø§ÛŒ Ù¾Ø±Ú©Ø§Ø±Ø¨Ø±Ø¯ + Ø³Ø®Øªâ€ŒØ§ÙØ²Ø§Ø±ÛŒ
CRC_PRESETS = {
    "CRC-8-ATM": CRCConfig("CRC-8-ATM", 8, 0x07, 0x00, 0x00, False, False,
                           crcmod.predefined.mkCrcFun('crc-8')),
    "CRC-8-Dallas": CRCConfig("CRC-8-Dallas", 8, 0x31, 0x00, 0x00, True, True,
                              crcmod.predefined.mkCrcFun('crc-8-dallas-maxim')),
    "CRC-16-CCITT": CRCConfig("CRC-16-CCITT", 16, 0x1021, 0xFFFF, 0x0000, False, False,
                               crcmod.predefined.mkCrcFun('crc-ccitt-false')),
    "CRC-16-MODBUS": CRCConfig("CRC-16-MODBUS", 16, 0x8005, 0xFFFF, 0x0000, True, True,
                               crcmod.predefined.mkCrcFun('modbus')),
    "CRC-32-IEEE": CRCConfig("CRC-32-IEEE", 32, 0x04C11DB7, 0xFFFFFFFF, 0xFFFFFFFF, True, True,
                             lambda data: zlib.crc32(data) & 0xFFFFFFFF),
    "CRC-32C": CRCConfig("CRC-32C", 32, 0x1EDC6F41, 0xFFFFFFFF, 0xFFFFFFFF, True, True,
                         crcmod.predefined.mkCrcFun('crc-32c')),  # Ø³Ø®Øªâ€ŒØ§ÙØ²Ø§Ø±ÛŒ Ø¯Ø± Intel
    "CRC-64-ECMA": CRCConfig("CRC-64-ECMA", 64, 0x42F0E1EBA9EA3693, 0x0, 0x0, False, False,
                             crcmod.predefined.mkCrcFun('crc-64')),
    "CRC-64-XZ": CRCConfig("CRC-64-XZ", 64, 0x42F0E1EBA9EA3693, 0xFFFFFFFFFFFFFFFF, 0xFFFFFFFFFFFFFFFF, True, True,
                           crcmod.predefined.mkCrcFun('crc-64-xz')),
}

# -------------------------- Datasets --------------------------
def load_datasets() -> Dict[str, Tuple[np.ndarray, np.ndarray]]:
    datasets_dict = {}
    
    iris = datasets.load_iris()
    wine = datasets.load_wine()
    bc = datasets.load_breast_cancer()
    digits = datasets.load_digits()
    Xsyn, ysyn = make_classification(n_samples=500, n_features=20, n_classes=3, n_informative=15, random_state=42)
    
    datasets_dict["iris"] = (iris.data, iris.target)
    datasets_dict["wine"] = (wine.data, wine.target)
    datasets_dict["breast_cancer"] = (bc.data, bc.target)
    datasets_dict["digits"] = (digits.data, digits.target)
    datasets_dict["synthetic"] = (Xsyn, ysyn)
    
    return datasets_dict

# -------------------------- Utils --------------------------
def sample_to_bytes(sample: np.ndarray, normalize: bool = True) -> bytes:
    """ØªØ¨Ø¯ÛŒÙ„ Ù†Ù…ÙˆÙ†Ù‡ Ø¨Ù‡ Ø¨Ø§ÛŒØª Ø¨Ø§ Ø¯Ù‚Øª Ø¨Ø§Ù„Ø§"""
    if normalize:
        # Ù†Ø±Ù…Ø§Ù„â€ŒØ³Ø§Ø²ÛŒ Ø¨Ù‡ [0, 1] Ø¨Ø±Ø§ÛŒ Ù…Ù‚Ø§ÛŒØ³Ù‡ Ø¹Ø§Ø¯Ù„Ø§Ù†Ù‡
        s = (sample - sample.min()) / (sample.max() - sample.min() + 1e-8)
    else:
        s = sample
    
    if s.dtype.kind in 'fi':  # integer or float
        return b''.join(struct.pack('<d', float(x)) for x in s)
    return b''

def compute_crc_batch(config: CRCConfig, data_bytes_list: List[bytes]) -> np.ndarray:
    """Ù…Ø­Ø§Ø³Ø¨Ù‡ CRC Ø¨Ø±Ø§ÛŒ Ù„ÛŒØ³Øª Ø¨Ø§ÛŒØªâ€ŒÙ‡Ø§ â€” Ø®ÛŒÙ„ÛŒ Ø³Ø±ÛŒØ¹â€ŒØªØ±"""
    return np.array([config.func(data) for data in data_bytes_list], dtype=np.uint64)

# -------------------------- Main Analysis --------------------------
def analyze_crc_collision(datasets_dict: Dict[str, Tuple[np.ndarray, np.ndarray]]):
    results = []
    crc_values_all = {}
    
    for ds_name, (X, y) in datasets_dict.items():
        print(f"Ø¯Ø± Ø­Ø§Ù„ Ù¾Ø±Ø¯Ø§Ø²Ø´ Ø¯ÛŒØªØ§Ø³Øª: {ds_name} ({X.shape})")
        crc_values_all[ds_name] = {}
        
        # ØªØ¨Ø¯ÛŒÙ„ ØªÙ…Ø§Ù… Ù†Ù…ÙˆÙ†Ù‡â€ŒÙ‡Ø§ Ø¨Ù‡ Ø¨Ø§ÛŒØª
        bytes_list = [sample_to_bytes(sample) for sample in X]
        
        for crc_name, config in CRC_PRESETS.items():
            crc_vals = compute_crc_batch(config, bytes_list)
            unique_count = len(np.unique(crc_vals))
            collision_rate = 1 - unique_count / len(X)
            entropy = len(bin(max(crc_vals.bit_length(), 1))) - 1 if unique_count > 0 else 0
            
            results.append({
                "dataset": ds_name,
                "crc": crc_name,
                "width": config.width,
                "samples": len(X),
                "unique": unique_count,
                "collision_rate": collision_rate,
                "effective_bits": entropy
            })
            crc_values_all[ds_name][crc_name] = crc_vals
    
    return pd.DataFrame(results), crc_values_all


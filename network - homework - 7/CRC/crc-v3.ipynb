# For Jupyter/Colab notebooks
import ipywidgets as widgets
from IPython.display import display

def create_crc_dashboard(datasets, crc_algorithms):
    """Create interactive dashboard for exploring CRC results"""
    
    dataset_dropdown = widgets.Dropdown(
        options=list(datasets.keys()),
        description='Dataset:'
    )
    
    crc_dropdown = widgets.Dropdown(
        options=crc_algorithms,
        description='CRC Algorithm:'
    )
    
    def update_plots(dataset, crc_alg):
        # Update plots based on selection
        fig, (ax1, ax2) = plt.subplots(1, 2, figsize=(12, 4))
        
        # Histogram
        values = crc_values_store[dataset][crc_alg]
        ax1.hist([float(v) for v in values], bins=30)
        ax1.set_title(f'CRC Distribution: {crc_alg}')
        
        # Detection rates
        model_data = sim_df[(sim_df['dataset'] == dataset) & (sim_df['crc'] == crc_alg)]
        ax2.bar(range(len(model_data)), model_data['detection_rate'])
        ax2.set_xticks(range(len(model_data)))
        ax2.set_xticklabels([f"{m}-{p}" for m, p in zip(model_data['model'], model_data['param'])], rotation=45)
        ax2.set_title('Detection Rates')
        
        plt.tight_layout()
        plt.show()
    
    interact(update_plots, dataset=dataset_dropdown, crc_alg=crc_dropdown)